VITE_SUPABASE_ANON_KEY=
# Base URL da aplicação para redirecionamentos de auth (ex.: reset de senha)
VITE_APP_URL=http://localhost:8082
# URL de redirecionamento do OAuth do Meta (deve existir também no Meta for Developers)
VITE_META_REDIRECT_URI=http://localhost:8082/meta-ads-config

# Meta Business OAuth (client-side - apenas para informação, NÃO usado diretamente)
# Os valores reais devem estar em Supabase Secrets (META_APP_ID, META_APP_SECRET)
VITE_META_APP_ID=
VITE_META_APP_SECRET=

# --- Supabase Edge Functions (backend only) ---
# NUNCA exponha estas variáveis no client.
# Produção: defina como secrets via CLI
#   supabase secrets set SUPABASE_SERVICE_ROLE_KEY="<service_role_key>"
#   supabase secrets set META_APP_ID="<meta_app_id>"
#   supabase secrets set META_APP_SECRET="<meta_app_secret>"
# Local (opcional): use arquivo supabase/.env e
#   supabase functions serve --env-file supabase/.env
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Asaas Payment Gateway (Edge Function)
