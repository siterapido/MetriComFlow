VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
# Base URL da aplicação para redirecionamentos de auth (ex.: reset de senha)
VITE_APP_URL=http://localhost:8082
# URL de redirecionamento do OAuth do Meta (deve existir também no Meta for Developers)
VITE_META_REDIRECT_URI=http://localhost:8082/metricas

# Meta Business OAuth (client-side - apenas para informação, NÃO usado diretamente)
# Os valores reais devem estar em Supabase Secrets (META_APP_ID, META_APP_SECRET)
VITE_META_APP_ID=
VITE_META_APP_SECRET=

# Meta Conversions API (CAPI)
# Configure these in Supabase Secrets for Edge Functions
#   supabase secrets set META_PIXEL_ID="<pixel_id>"
#   supabase secrets set META_ACCESS_TOKEN="<long_lived_access_token>"
# Optional test event code (Meta Events Manager → Test Events)
#   supabase secrets set META_TEST_EVENT_CODE="<code>"
META_PIXEL_ID=
META_ACCESS_TOKEN=
META_TEST_EVENT_CODE=

# Meta Webhook verify token (Lead Ads)
META_WEBHOOK_VERIFY_TOKEN=

# Stripe Checkout
# - STRIPE_SECRET_KEY: chave secreta (usada pelas Edge Functions)
# - VITE_STRIPE_PUBLISHABLE_KEY: chave pública utilizada pelo frontend quando necessário
# - STRIPE_WEBHOOK_SECRET: segredo do webhook configurado no painel da Stripe
# - APP_URL: domínio usado para redirecionamentos pós-checkout
VITE_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
APP_URL=http://localhost:8082

# --- Supabase Edge Functions (backend only) ---
# NUNCA exponha estas variáveis no client.
# Produção: defina como secrets via CLI
#   supabase secrets set SUPABASE_SERVICE_ROLE_KEY="<service_role_key>"
#   supabase secrets set META_APP_ID="<meta_app_id>"
#   supabase secrets set META_APP_SECRET="<meta_app_secret>"
# Local (opcional): use arquivo supabase/.env e
#   supabase functions serve --env-file supabase/.env
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Mailgun Inbound (Routes)
# Frontend uses VITE_MAILGUN_INBOUND_DOMAIN to display org-specific inbound address (slug@domain)
VITE_MAILGUN_INBOUND_DOMAIN=
# Backend (Edge Functions) use these to verify and provision inbound routes
MAILGUN_SIGNING_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
# Optional: override API base (EU region: https://api.eu.mailgun.net/v3)
MAILGUN_API_BASE_URL=
